build() {
  cd "${srcdir}"
  for langfile in *.xpi; do
    lang=${langfile/.xpi/}
    bsdtar xf ${langfile}
    sed -i "s|jar:chrome/${lang}.jar|jar:${lang}.jar|" chrome.manifest
    install -D -m 644 chrome/${lang}.jar "${pkgdir}/usr/lib/firefox-${pkgver}/chrome/${lang}.jar"
    install -D -m 644 chrome.manifest "${pkgdir}/usr/lib/firefox-${pkgver}/chrome/${lang}.manifest"
  done
}

