post_install() {
	cat <<-EndOfMessage
	>>> This package is optional.
	>>>
	>>> It does not provide full mplayer functionality.
	>>>
	>>> You should always install before this, the package:
        >>> mplayer-svn
	>>> from the aDSLgr64 ArchLinux repo.
	EndOfMessage
	/bin/true
}

post_upgrade() {
	post_install
}

